{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "strict": true,
    "noUnusedLocals": true,
    "paths": {
      "~/*": ["./src/*"],
      "~/database/entities": ["./src/database/entities/index"],
      "~/auth/guard": ["./src/auth/guards/jwt.guard"],
      "~/auth/decorator": ["./src/auth/decorators/user.decorator"],
      "~/permissions": ["./src/permissions/services/manager.service"],
      "~/permissions/list": ["./src/permissions/enums/index"],
      "../../../../../mikro-orm.config": ["./mikro-orm.config"],
    },
  }
}
